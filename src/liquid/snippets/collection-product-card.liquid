{% assign page_prefix = 'collection-card-' %}
{% assign product_handle = product.handle %}

{% assign page_handle = page_prefix | append: product_handle %}

{% assign page_content = pages[page_handle].content %}

<div class="collection-product-card-overlay">

</div>
<div class="collection-product-card-container">
  <div class="close-button-container">
    <div class="close-button-svg-container">
      <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
      <line x1="11" y1="1" x2="1" y2="11" stroke="#999994" stroke-linecap="round"/>
      <line x1="11" y1="11" x2="1" y2="1" stroke="#999994" stroke-linecap="round"/>
      </svg>
    </div>
  </div>

  <div class="collection-product-card-content">
    {{ page_content }}
  </div>


</div>
