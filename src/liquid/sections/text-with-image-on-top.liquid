<div id="section-{{ section.id }}" class="Section {% unless section.settings.image %}Section--spacingNormal{% endunless %}" style="background: {{ section.settings.background_color }}; color: {{ section.settings.text_color }}">
  <div class="svg_container">
    {{ section.settings.svg_html }}
  </div>

  <div class="FeatureText {% if section.settings.image != blank %}FeatureText--withImage{% endif %}" >
      <div class="FeatureText__ContentWrapper">
        <div class="FeatureText__Content">
          {%- if section.settings.subheading != blank or section.settings.title != blank -%}
            <header class="SectionHeader">
              {%- if section.settings.subheading != blank -%}
                <h3 class="SectionHeader__SubHeading Heading u-h6" style="color: {{ section.settings.text_color }}">{{ section.settings.subheading | escape }}</h3>
              {%- endif -%}

              {%- if section.settings.title != blank -%}
                <h2 class="SectionHeader__Heading Heading u-h1" style="color: {{ section.settings.text_color }}">{{ section.settings.title | escape }}</h2>
              {%- endif -%}

              {%- if section.settings.content != blank -%}
                <div class="SectionHeader__Description Rte">
                  {{ section.settings.content }}
                </div>
              {%- endif -%}

              {%- if section.settings.link_text != blank -%}
                <a href="{{ section.settings.link_url }}" class="Link Link--underline" target="_blank">{{ section.settings.link_text | escape }}</a>
              {%- endif -%}
            </header>
          {%- endif -%}
        </div>
      </div>

  </div>
</div>

<style media="screen">
  #section-{{ section.id }} .svg_container {
    text-align: center;
    margin-bottom: 34px;
  }

  #section-{{ section.id }} .SectionHeader__Heading {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 14px;
  }

  #section-{{ section.id }} .FeatureText__Content {
    font-size: 14px;
  }

  @media screen and (min-width: 641px) {
    #section-{{ section.id }} .SectionHeader__Heading {
      font-size: 28px;
    }

    #section-{{ section.id }} .FeatureText__Content {
      max-width: 848px;
      font-size: 18px;
    }

    #section-{{ section.id }} .SectionHeader__Description {
      max-width: 100%;
      margin-top: 0;
    }
  }

</style>

{% schema %}
{
  "name": "Text w/Image on Top",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Title"
    },
    {
      "type": "html",
      "id": "svg_html",
      "label": "SVG HTML"
    },
	  {
      "type": "url",
      "id": "image_link_url",
      "label": "Image Link URL"
    },
  	{
  	  "type": "color",
  	  "id": "background_color",
        "label": "Background color",
        "default": "#fff"
  	},
  	{
  	  "type": "color",
  	  "id": "text_color",
        "label": "Text color",
        "default": "#000"
  	},
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Text w/Image on Top",
      "settings": {}
    }
  ]
}
{% endschema %}
