{% schema %}
  {
    "name": "Pricing Page Body (old)",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable",
        "label": "Enabled Section?"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Plan",
        "settings": [
          {
            "id": "plan_name",
            "type": "text",
            "label": "Feature name",
            "default": "Feature name"
          },
          {
            "id": "pro_plan",
            "type": "select",
            "label": "Pro Plan",
            "options": [
              { "value": "check", "label": "Yes" },
              { "value": "cross", "label": "No" }
            ]
          },
          {
            "id": "self_plan",
            "type": "select",
            "label": "Self Plan",
            "options": [
              { "value": "check", "label": "Yes" },
              { "value": "cross", "label": "No" }
            ]
          }
        ]
      }
    ]
  }
{% endschema %}

{% javascript %}


  $('.switch-toggle input').on('change', function() {
    var isChecked = $(this).is(':checked')
    $('.switch-toggle input').prop('checked', isChecked);

    $('.pricing-yearly').toggleClass('active', !isChecked);
    $('.pricing-monthly').toggleClass('active', isChecked);
  });

{% endjavascript %}
