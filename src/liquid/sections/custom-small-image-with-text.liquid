{%- if section.settings.enable -%}

 <div class="custom-small-image-content section-content" data-section-id="{{ section.id }}" style="background-color:{% if section.settings.bg_color %} {{section.settings.bg_color}} {% endif %}">
	<div class="container">
      {% for block in section.blocks %}
        <div class="Grid image_grid">
          <div class="Grid__Cell 1/3 image-sec">
            {%- assign image = block.settings.image -%}
            {%- if image -%}
              <div class="block_image block_image--{{ block.settings.image_width }}">
                <img class="custom_block_image Image--lazyLoad"
                     src="{{ image | img_url: '1x1' }}"
                     data-src="{{ image | img_url: 'x800' }}"
                     alt="{{ image.alt | escape }}" style="width: {{ block.settings.image_width }}px;">

                <noscript>
                  <img class="Slideshow__Image" src="{{ image | img_url: 'x800' }}" alt="{{ image.alt | escape }}">
                </noscript>
              </div>
            {%- endif -%}
          </div>
          <div class="Grid__Cell 2/3 detail-sec">
            <div class="section_content">
              {%- if block.settings.heading != blank -%}
                  <h2 style="color: {{ block.settings.heading_color }}">{{block.settings.heading}}</h2>
              {%- endif -%}
              {%- if block.settings.content != blank -%}
                  <p style="color: {{ block.settings.content_color }}">{{block.settings.content}}</p>
              {%- endif -%}
            </div>
          </div>
        </div>
      {% endfor %}




    </div>
  </div>
{%- endif -%}
{% schema %}
  {
    "name": "Custom Small Image",
	"class": "custom-small-image-with-text",
    "settings": [
		{
          "type": "checkbox",
          "id": "enable",
          "label": "Enabled Section?"
        },
        {
          "type": "header",
          "content": "Color"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Select Background Color"
        }
	],
	"blocks":[
	  {
		"type": "small-image-text",
		"name": "Small Image with Text",
		"settings":[
          {
              "type": "image_picker",
              "id": "image",
              "label": "Select Image"
          },
          {
              "type": "text",
              "id": "heading",
              "label": "Heading"
          },
          {
            "type": "color",
            "id": "heading_color",
            "label": "Select Heading Color"
          },
          {
              "type": "textarea",
              "id": "content",
              "label": "Content"
          },
          {
            "type": "color",
            "id": "content_color",
            "label": "Select Content Color"
          },
          {
            "type": "select",
            "id": "image_width",
            "label": "Image Width",
            "options": [
              {
                "value": "100",
                "label": "100"
              },
              {
                "value": "150",
                "label": "150"
              },
              {
                "value": "200",
                "label": "200"
              },
              {
                "value": "250",
                "label": "250"
              },
              {
                "value": "300",
                "label": "300"
              },
              {
                "value": "350",
                "label": "350"
              }
            ],
            "default": "200"
          }
		]
	  }
	]
  }
{% endschema %}

