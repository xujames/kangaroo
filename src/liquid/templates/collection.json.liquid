
{%- layout none -%}
{%- paginate collection.products by 250 -%}
{
  "title": "{{ collection.title | escape }}",
  "handle": "{{ collection.handle | escape }}",
  "products": [
    {%- for product in collection.products -%}
      {%- include 'json--product', product: product -%}{%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
  ]
}
{%- endpaginate -%}
